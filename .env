# MySQL
MYSQL_ROOT_PASSWORD=secret
MYSQL_DB=appdb
MYSQL_USER=appuser
MYSQL_PASSWORD=apppw
MYSQL_HOST=mysql
MYSQL_PORT=3306

# SQLAlchemy
SQLALCHEMY_DB_URI=mysql+pymysql://appuser:apppw@mysql:3306/appdb

# Redis (Celery broker)
REDIS_URL=redis://redis:6379/0

# Celery result backend (MySQL 사용)
CELERY_RESULT_DB_URI=db+mysql+pymysql://appuser:apppw@mysql:3306/appdb

# Kafka
KAFKA_BOOTSTRAP=kafka:9092
KAFKA_TOPIC=jobs

# 외부 호출 테스트용 URL (tasks에서 aiohttp로 호출)
EXTERNAL_API=https://httpbin.org/get
